#alias ls='ls --color=auto'
alias lsbig='ls -Slh | head'
alias lssmall='ls -Slhr | head'
alias lsnew='ls -tlh | head'
alias lsold='ls -tlh | tail'

alias vi=nvim
alias df='df -h'
alias du='du -h'
alias cls='echo -ne "\033c"'
alias free='free -m'                                            # Show sizes in MB

# git
alias pull="git pull origin"
alias push="git push origin"
alias s="git status"
alias ll="git log"
alias l="git log --pretty=oneline --abbrev-commit --max-count=15"
alias ga="git add"
alias gc="git commit"
alias gd="git diff"
alias gdt="git difftool"
alias gmt="git mergetool"
alias co="git checkout"
alias glog="git log --graph --oneline --all"
alias unstage="git reset HEAD"

# Suffix-Aliase
alias -s txt=nvim
alias -s de=$BROWSER com=$BROWSER org=$BROWSER


# Antlr
alias runantlr='java org.antlr.v4.Tool'
alias grun='java org.antlr.v4.gui.TestRig'
alias antlr4='java -jar /usr/local/lib/antlr-4.5.1-complete.jar'

